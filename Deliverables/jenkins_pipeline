pipeline{
    agent any
    tools {
        ansible 'ansible2'
        terraform 'terraform-11'
    }
    environment {
    	AWS_ACCESS_KEY_ID = AKIAX722HVIAIGEILKG6
    	AWS_SECRET_ACCESS_KEY = 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
    	AWS_REGION = 'ap-southeast-1'
    	TF_FOLDER = '/var/lib/jenkins/workspace/terraform-ansible-prov-conf/Deliverables/vpc_ec2_terraform/'
    	ANS_FOLDER = '/var/lib/jenkins/workspace/terraform-ansible-prov-conf/Deliverables/ansible-plays/'
    }
    stages{
        stage('Git checkout'){
            steps{
                git url: 'https://github.com/babatomiwaosibodu/spring-framework-petclinic.git'
            }
        }
        stage('Terraform - Env Variables Access & Secret Keys:'){
            steps{
             	echo env.AWS_ACCESS_KEY_ID
            	echo env.AWS_SECRET_ACCESS_KEY
            	echo env.AWS_REGION
            }
        }
        stage('Terraform Init:'){
            steps{
                dir(env.TF_FOLDER){
                    echo env.TF_FOLDER
                    sh 'terraform init'
                }
            }
        }
        stage('Terraform Apply:'){
            steps{
                dir(env.TF_FOLDER){
                    echo env.TF_FOLDER
                    sh 'terraform apply --auto-approve'
                }
            }
        }
        stage('Dynamic Inventory'){
            steps{
                dir(env.TF_FOLDER){
                     echo env.TF_FOLDER
                     sh  './dynamic_inventory.sh'
                }
            }
        }
        
        stage('======= Execute Ansible Playbook ======='){
            steps{
                dir(env.ANS_FOLDER){
                    echo env.ANS_FOLDER
                    sh 'ansible-playbook playbook.yml -i inventory.ini --user ubuntu'
                }
            }
        }
    }
}
